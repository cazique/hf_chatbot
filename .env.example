# JWT Secret Key
SECRET_KEY="tu_super_secreto_aqui_preferiblemente_largo_y_aleatorio"

# Configuración de los proveedores de OLLAMA
# Formato: "NombreVisible|URL_API|Clave_API,OtroNombre|URL_API_2|Clave_2"
# La clave API puede ser un token o cualquier valor que necesites pasar en los headers.
# Por ahora, el código de app.py no usa la clave, pero está aquí para futura implementación.
OLLAMA_PROVIDERS="Cloud API|https://api.ollama.com|key1,Local Host|http://localhost:11434|local_key"

# Modelo de Lenguaje a utilizar
OLLAMA_MODEL="llama3"

# --- Configuración de la Base de Datos (MariaDB) ---
# Estas variables son usadas por docker-compose para inicializar el servicio de BD.
MARIADB_ROOT_PASSWORD="root_password_segura"
MARIADB_DATABASE="chatbot_db"
MARIADB_USER="user"
MARIADB_PASSWORD="password_segura"
MARIADB_HOST="db"
MARIADB_PORT=3306

# --- Configuración del Token de Acceso ---
ACCESS_TOKEN_EXPIRE_MINUTES=60
